    </insert>

    <!--根据UserId查询-->
    <select id="selectByUserId" resultMap="base_result_map">
        select
        <include refid="base_column_list"/>
        from sys_account where user_id=#{userId}
    </select>
    <!--根据UserId更新-->
    <update id="updateByUserId" parameterType="com.doge.entity.po.SysAccount">
        UPDATE sys_account
