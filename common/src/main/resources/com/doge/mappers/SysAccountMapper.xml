    </insert>
    <!--批量插入-->
    <insert id="insertBatch" parameterType="com.doge.entity.po.SysAccount">
        INSERT INTO sys_account(phone,user_name,password,position,status,roles,create_time)values
        <foreach collection="list" item="item" separator=",">
            (#{item.phone},#{item.userName},#{item.password},#{item.position},#{item.status},#{item.roles},#{item.createTime})
        </foreach>
    </insert>

