            </if>
        </trim>
    </insert>
    <!--批量插入-->
    <insert id="insertBatch" parameterType="com.doge.entity.po.SysMenu">
        INSERT INTO sys_menu(menu_name,menu_type,menu_url,p_id,sort,permission_code,show_type,icon)values
        <foreach collection="list" item="item" separator=",">
            (#{item.menuName},#{item.menuType},#{item.menuUrl},#{item.pId},#{item.sort},#{item.permissionCode},#{item.showType},#{item.icon})
        </foreach>
    </insert>

    <!--批量插入或更新-->
    <insert id="insertOrUpdateBatch" parameterType="com.doge.entity.po.SysMenu">
        INSERT INTO sys_menu(menu_name,menu_type,menu_url,p_id,sort,permission_code,show_type,icon)values
        <foreach collection="list" item="item" separator=",">
            (#{item.menuName},#{item.menuType},#{item.menuUrl},#{item.pId},#{item.sort},#{item.permissionCode},#{item.showType},#{item.icon})
        </foreach>
        on DUPLICATE key update
        menu_name = VALUES(menu_name),
        menu_type = VALUES(menu_type),
        menu_url = VALUES(menu_url),
        p_id = VALUES(p_id),
        sort = VALUES(sort),
        permission_code = VALUES(permission_code),
        show_type = VALUES(show_type),
        icon = VALUES(icon)

    </insert>

    <!--根据MenuId查询-->
    <select id="selectByMenuId" resultMap="base_result_map">
        select
        <include refid="base_column_list"/>
        from sys_menu where menu_id=#{menuId}
    </select>

    <!--根据MenuId更新-->
    <update id="updateByMenuId" parameterType="com.doge.entity.po.SysMenu">
        UPDATE sys_menu
        <set>
            <if test="bean.menuName!=null">
                menu_name = #{bean.menuName},
            </if>
            <if test="bean.menuType!=null">
                menu_type = #{bean.menuType},
            </if>
            <if test="bean.menuUrl!=null">
                menu_url = #{bean.menuUrl},
            </if>
            <if test="bean.pId!=null">
                p_id = #{bean.pId},
            </if>
            <if test="bean.sort!=null">
                sort = #{bean.sort},
            </if>
            <if test="bean.permissionCode!=null">
                permission_code = #{bean.permissionCode},
            </if>
            <if test="bean.showType!=null">
                show_type = #{bean.showType},
            </if>
            <if test="bean.icon!=null">
                icon = #{bean.icon},
            </if>
        </set>
        where menu_id=#{menuId}
    </update>

    <!--根据MenuId删除-->
    <delete id="deleteByMenuId">
        delete
        from sys_menu
        where menu_id = #{menuId}
    </delete>

    <!--查询多个id-->
    <select id="selectALlMenuByRoleIds" resultMap="base_result_map">
        SELECT DISTINCT m.*
        FROM sys_menu m
        INNER JOIN sys_role_2_menu rm on m.menu_id = rm.menu_id
        WHERE rm.role_id in (
        <foreach collection="roleIds" separator="," item="item">
            #{item}
        </foreach>
        )
    </select>

</mapper>